{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "Node",
      "allowJs": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "jsx": "react",
      "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
  }
  